<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>Cotización Transcripción de Planos - Fabrixis</title>
  <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;600&display=swap" rel="stylesheet" />
  <style>
    body {
      font-family: 'Montserrat', sans-serif;
      background-color: #f4f7fa;
      color: #1E3A8A;
      margin: 0;
      padding: 0;
    }
    header {
      background-color: #1E3A8A;
      color: white;
      padding: 1rem;
      text-align: center;
    }
    nav {
      display: flex;
      justify-content: center;
      background-color: #E5E7EB;
      padding: 0.8rem;
      gap: 1.5rem;
      margin-bottom: 1rem;
    }
    nav a {
      color: #1E3A8A;
      font-weight: 600;
      text-decoration: none;
      transition: color 0.3s;
    }
    nav a:hover {
      color: #324bc1;
    }
    main {
      max-width: 600px;
      margin: 0 auto;
      background-color: white;
      padding: 2rem;
      border-radius: 1rem;
      box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
    }
    h1 {
      text-align: center;
      margin-bottom: 1.5rem;
    }
    label {
      display: block;
      margin: 1rem 0 0.3rem;
      font-weight: 600;
    }
    select {
      width: 100%;
      padding: 0.5rem;
      border-radius: 0.4rem;
      border: 1px solid #ccc;
      font-size: 1rem;
    }
    .btn, .btn-seguir {
      margin-top: 1.2rem;
      background-color: #1E3A8A;
      color: white;
      border: none;
      padding: 0.75rem 1.5rem;
      font-size: 1rem;
      border-radius: 0.6rem;
      cursor: pointer;
      font-weight: 600;
      transition: background-color 0.3s;
    }
    .btn:hover, .btn-seguir:hover {
      background-color: #324bc1;
    }
    .hidden {
      display: none;
    }
  </style>
</head>
<body>

<header>
  <h1>Fabrixis by Puchana</h1>
  <p>Precision that plays off</p>
</header>

<nav>
  <a href="/inicio/">Inicio</a>
  <a href="/productos/">Productos</a>
  <a href="/nosotros/">Sobre Nosotros</a>
</nav>

<main>
  <h1>Cotización: Transcripción de planos</h1>

  <form id="formulario">
    <div id="pregunta1">
      <label>¿Qué tipo de formato entregas?</label>
      <select id="formatoOriginal" required>
        <option value="">Selecciona una opción</option>
        <option value="0">Escaneado claro</option>
        <option value="50">Foto de buena calidad</option>
        <option value="80">Foto borrosa o papel</option>
        <option value="100">Mixto</option>
        <option value="otro">Otro</option>
      </select>
      <button type="button" class="btn-seguir" id="btn1" onclick="continuarFormato()">Continuar</button>
    </div>

    <div id="pregunta2" class="hidden">
      <label>¿Cuántos planos vas a transcribir?</label>
      <select id="cantidadPlanos">
        <option value="0">1 a 2 planos</option>
        <option value="75">3 a 5 planos</option>
        <option value="140">6 a 8 planos</option>
        <option value="215">8 a 10 planos</option>
        <option value="otro">Otro</option>
      </select>
      <button type="button" class="btn-seguir" id="btn2" onclick="continuarCantidad()">Continuar</button>
    </div>

    <div id="pregunta3" class="hidden">
      <label>¿Formato de entrega?</label>
      <select id="formatoFinal">
        <option value="0">DWG</option>
        <option value="30">PDF</option>
        <option value="55">Ambos</option>
        <option value="otro">Otro</option>
      </select>
      <button type="submit" class="btn" id="btnEnviar">Obtener cotización</button>
    </div>
  </form>
</main>

<script>
  function continuarFormato() {
    const valor = document.getElementById('formatoOriginal').value;
    if (valor === "otro") {
      window.location.href = "/productos/cotizacion/personalizado/";
    } else {
      document.getElementById('btn1').classList.add('hidden');
      document.getElementById('pregunta2').classList.remove('hidden');
    }
  }

  function continuarCantidad() {
    const valor = document.getElementById('cantidadPlanos').value;
    if (valor === "otro") {
      window.location.href = "/productos/cotizacion/personalizado/";
    } else {
      document.getElementById('btn2').classList.add('hidden');
      document.getElementById('pregunta3').classList.remove('hidden');
    }
  }

  document.getElementById('formulario').addEventListener('submit', function(e) {
    e.preventDefault();
    const base = 200;
    const totalExtras = 
      parseInt(document.getElementById('formatoOriginal').value || 0) +
      parseInt(document.getElementById('cantidadPlanos').value || 0) +
      parseInt(document.getElementById('formatoFinal').value || 0);
    const total = base + totalExtras;
    window.location.href = `/productos/cotizacion/transcripcion/resultado/?total=${total}`;
  });
</script>

</body>
</html>

